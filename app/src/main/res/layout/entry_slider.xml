<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="357dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/banner5medical1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Welcome to Medikit"
            android:textColor="#000"
            android:textSize="30sp" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="We help you take care your health better"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/dot_PNG19" />
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_margin="5dp"
                android:src="@drawable/dot_PNG19" />
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/dot_PNG19" />
        </LinearLayout>

        //slide2

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/banner2medical"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Ask A Doctor Online"
            android:textColor="#000"
            android:textSize="30sp" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="Consult online with them for any kind of medical assistence"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/dot_PNG19" />
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_margin="5dp"
                android:src="@drawable/dot_PNG19" />
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/dot_PNG19" />
        </LinearLayout>

        //slide3

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/doctors_img"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Health Monitoring"
            android:textColor="#000"
            android:textSize="30sp" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Consult online with them for any kind of medical assistence"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/dot_PNG19" />
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_margin="5dp"
                android:src="@drawable/dot_PNG19" />
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/dot_PNG19" />

    </ScrollView>
    </LinearLayout>